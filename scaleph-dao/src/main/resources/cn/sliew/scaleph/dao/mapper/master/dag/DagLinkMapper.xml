<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sliew.scaleph.dao.mapper.master.dag.DagLinkMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.sliew.scaleph.dao.entity.master.dag.DagLink">
        <result column="id" property="id" />
        <result column="creator" property="creator" />
        <result column="create_time" property="createTime" />
        <result column="editor" property="editor" />
        <result column="update_time" property="updateTime" />
        <result column="dag_instance_id" property="dagInstanceId" />
        <result column="dag_config_link_id" property="dagConfigLinkId" />
        <result column="instance_id" property="instanceId" />
        <result column="inputs" property="inputs" />
        <result column="outputs" property="outputs" />
        <result column="status" property="status" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
    </resultMap>

    <resultMap id="DagLinkVOMap" type="cn.sliew.scaleph.dao.entity.master.dag.DagLinkVO">
        <result column="id" property="id" />
        <result column="creator" property="creator" />
        <result column="create_time" property="createTime" />
        <result column="editor" property="editor" />
        <result column="update_time" property="updateTime" />
        <result column="dag_instance_id" property="dagInstanceId" />
        <result column="instance_id" property="instanceId" />
        <result column="inputs" property="inputs" />
        <result column="outputs" property="outputs" />
        <result column="status" property="status" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="dag_config_link_id" property="dagConfigLinkId" />
        <association column="dag_config_link_id" property="dagConfigLink"
                     select="cn.sliew.scaleph.dao.mapper.master.dag.DagConfigLinkMapper.selectById"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        creator,
        create_time,
        editor,
        update_time,
        dag_instance_id, dag_config_link_id, instance_id, inputs, outputs, `status`, start_time, end_time
    </sql>

    <select id="listByDagInstanceId" resultMap="DagLinkVOMap">
        select
        <include refid="Base_Column_List"/>
        from dag_link
        where dag_instance_id = #{dagInstanceId}
    </select>

</mapper>
